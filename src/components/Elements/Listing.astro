---
interface Props {
    text: any,
    color?: string,
    height?: string,
    weight?: string,
    width?: string,
}

const {
    text,
    color = 'text-white',
    height = 'leading-relaxed',
    weight = 'font-medium',
    width = 'w-full'
} = Astro.props;
---

<li class=`${color} ${height} ${weight} ${width}`>
    {text}
</li>