---
import { Image } from "astro:assets"

interface Props {
    image: any,
    title: string,
    text: string
}

const  {
    image,
    title,
    text
} = Astro.props as Props;
---


<div class="flex flex-col gap-3">
    <div>
        <Image src={image} alt="/" />
    </div>
    <div class="flex flex-col gap-2 px-4">
        <h5 class="font-semibold text-maus_dark_text_title">
            {title}
        </h5>
        <p class="font-medium text-maus_dark_text max-sm:w-40">
            {text}
        </p>
    </div>
</div>
